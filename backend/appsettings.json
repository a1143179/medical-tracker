{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=MedicalTracker;Trusted_Connection=true;TrustServerCertificate=true"
  },
  "JWT": {
    "SecretKey": "REPLACE_WITH_YOUR_ACTUAL_SECRET_KEY_GENERATED_FROM_OPENSSL_OR_SIMILAR_TOOL",
    "Issuer": "https://medicaltrackerbackend.azurewebsites.net",
    "Audience": "https://medicaltracker.azurewebsites.net",
    "ExpiryInMinutes": 1440
  },
  "Google": {
    "ClientId": "your-google-client-id-here",
    "ClientSecret": "your-google-client-secret-here"
  },
  "CORS": {
    "AllowedOrigins": [
      "https://medicaltracker.azurewebsites.net",
      "http://localhost:3000",
      "http://localhost:55555"
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Authentication": "Debug",
      "Backend": "Debug"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "File": {
      "Path": "logs/app.log",
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore.Authentication": "Debug",
        "Backend": "Debug"
      },
      "FileSizeLimitBytes": 10485760,
      "RetainedFileCountLimit": 5
    }
  },
  "AllowedHosts": "*"
}
